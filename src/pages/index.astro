---
import Layout from '../layouts/BaseLayout.astro'
---

<Layout
  title="Redradix - Layout"
  description="This is a meta description for this page"
>
  <section class="hero">
    <div class="hero__image">
      <img
        src="/assets/images/hero-image.webp"
        alt="Clean and minimal desk setup"
      />
    </div>

    <div class="hero__content">
      <div class="container"></div>
      <h1 class="hero__title">Calidad, como cualidad</h1>
      <p class="hero__text">
        Diseño de experiencia de usuario Maquetación y diseño responsive
        Desarrollo por sprints
      </p>
      <div class="hero__buttons"></div>
    </div>
  </section>
</Layout>

<style lang="scss">
  @import '../styles/scss/abstracts/_variables';
  @import '../styles/scss/abstracts/_mixins';

  $hero-image-width-m: 57%;
  $hero-image-width-d: 650px;
  $hero-title-width-d: 366px;
  $hero-text-width-d: 304px;

  .hero {
    @include media(md) {
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
      width: min(100% - ($space-l * 2), $container-width);
      margin-inline: auto;
    }

    &__image {
      margin-bottom: $space-l;

      @include media(md) {
        margin-bottom: 0;
        max-width: $hero-image-width-m;
      }

      @include media(lg) {
        margin-bottom: 0;
        max-width: $hero-image-width-d;
      }
    }

    &__content {
      padding: 0 $space-m;

      @include media(md) {
        padding: 0 $space-m 0 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
    }

    &__title {
      @include media(md) {
        max-width: $hero-title-width-d;
      }
    }

    &__text {
      @include media(md) {
        max-width: $hero-text-width-d;
      }
    }

    &__buttons {
      display: flex;
      gap: $space-m;
      margin-bottom: $space-l;
    }
  }
</style>
